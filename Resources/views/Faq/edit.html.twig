{% block title %}Add Faq Page{% endblock title %}
{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Add Faq Page</h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('bvi_faq_list') }}">Back to List</a></li>
                <li class="active">Add faq Page</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!-- Default box -->
                    <div class="box box-primary">
                        <form action="{{ path('bvi_faq_edit', {'id' : app.request.get('id')})}}" method="POST" id="faqForm" role="form" novalidate>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-xs-12 col-md-9 no-padding-left">
                                        <div class="form-group col-md-6">
                                            <label for="faq_page_slug">Question <span class="required">*</span></label>
                                            {{ form_widget(form.question, { 'attr': { 'placeholder': 'Please enter question', 'class': 'form-control'}}) }}
                                            <span class="text-danger">{% if form_errors(form.question) %}{{ form_errors(form.question) }}{% endif %}</span>
                                        </div>
                                        
                                        <div class="form-group col-md-6">
                                            <label for="faq_page_answer">Answer <span class="required">*</span></label>
                                            {{ form_widget(form.answer, { 'attr': { 'placeholder': 'Please enter answer', 'class': 'form-control'}}) }}
                                            <span class="text-danger">{% if form_errors(form.answer) %}{{ form_errors(form.answer) }}{% endif %}</span>
                                        </div>
                                     {{ form_rest(form) }}
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">	
                                <div class="pull-right hidden-xs">
                                     <div class="formnotes">* denotes required field</div>
                                </div><br/>
                                <input type="submit" value="Save" class="btn btn-primary">  
                                <a onClick="location.href = '{{ path('bvi_faq_list') }}'" class="btn btn-default"> Cancel </a>
                            </div> 
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock body %}